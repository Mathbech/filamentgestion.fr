/**
 * Fonction pour dessiner le graphique des prises de vues
 */

function depensesCharts() {
    var container = document.getElementById('register-charts');

    if (!container) {
        console.error("Le conteneur 'register-charts' n'a pas été trouvé.");
        return;
    }

    // Récupération des données
    var jsonData = {{ register_chart|json_encode|raw }};
    console.log(jsonData);

    if (!jsonData || Object.keys(jsonData).length === 0) {
        console.error("Aucune donnée disponible.");
        return;
    }

    // Création des colonnes
    var data = new google.visualization.DataTable();
    data.addColumn('sting', 'Date');
    data.addColumn('number', 'Nombre d\'inscriptions);


    // Préparation des données
    var dataToSet = Object.entries(jsonData).map(([key, item]) => {
        var label = item.week.toString();
        var data = item.total;
        return [label, data];
    });

    data.addRows(dataToSet);

    // options de graph
    var options = {
        title: 'Utilisateurs inscrits',
        chartArea: {width: '70%'},
        legend: { 
            position: 'Bottom',
            alignment: 'center',
            width: '100%'
            },
        hAxis: {
            title: 'Date',
        },
        vAxis: {
            scaleType: 'log',
            viewWindowMode: 'explicit',
            title: 'Nombre d\'inscriptions',
        },
    };
    
    // Création du graphique
    var view = new google.visualization.DataView(data);

    // Dessiner le graphique
    var chart = new google.visualization.AreaChart(document.getElementById("register-charts"));
    chart.draw(view, options);
}