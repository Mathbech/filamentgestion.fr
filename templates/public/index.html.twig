{% extends 'base.html.twig' %}


{% block body %}
    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col">
                <p class="text-info display-2">Bienvenue sur {{ site_name }}</p>
                <p class="display-5">Filamentgestion c'est plus de : </p>
            </div>
        </div>
    </div>
    <div class="row">
        
        {% include 'includes/card.html.twig' with {
            'variabletitle': 'Utilisateurs inscrits',
            'variable1': 'Utilisateurs',
            'variable2': utilisateurs,
            'variable3': 'Pays',
            'variable4': '1',
        } %}

        {% include 'includes/card.html.twig' with {
            'variabletitle': 'Statistiques consommables',
            'variable1': 'Imprimante enregistré',
            'variable2': imprimantes,
            'variable3': 'Impression effectué',
            'variable4': impressions,
        } %}
        
        {% include 'includes/card.html.twig' with {
            'variabletitle': 'pages et contributeurs',
            'variable1': 'Contributeurs',
            'variable2': contributeurs,
            'variable3': 'Pages crées',
            'variable4': pages,
        } %}

        {% include 'includes/card.html.twig' with {
            'variabletitle': 'Entreprise et partenaires',
            'variable1': 'Entreprise',
            'variable2': entreprises,
            'variable3': 'Partenaire',
            'variable4': partenaires,
        } %}

    </div>

    <p class="mb-0 font-weight-bold mt-2 text-primary text-center text-uppercase">C'est aussi de bon et loyaux services depuis 2020</p>
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Évolution des inscriptions</h4>
                    <canvas id="areaChart" style="height:250px"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Évolution du nombre d'entreprises</h4>
                    <canvas id="lineChart" style="height:250px"></canvas>
                </div>
            </div>
        </div>
    </div>

{% endblock %}